        $(document).ready(function() {
          $.noConflict();
          $('#myTable').DataTable({
            "paging": true,          // Enable pagination
            "pageLength": 2,        // Number of rows per page
            "lengthMenu": [5, 25, 50, 75, 100],  // Dropdown options for rows per page
      
